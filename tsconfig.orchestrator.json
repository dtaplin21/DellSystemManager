{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false,
    "rootDir": "src",
    "outDir": "build/orchestrator"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "frontend", "backend/node_modules"]
}
