{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-app.onrender.com/api/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_BACKEND_URL": "https://your-backend-app.onrender.com",
    "NEXT_PUBLIC_AI_SERVICE_URL": "https://your-backend-app.onrender.com"
  }
}
